{% extends 'admin/base.html.twig' %}

{% block title %}Nouveau Client | Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #434343 0%, #000000 100%);
            --accent-color: #e74c3c;
            --success-gradient: linear-gradient(135deg, #3498db 0%, #2c3e50 100%);
        }
        
        .client-form-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 50px rgba(0,0,0,0.15);
            background: white;
        }
        
        .form-header-glow {
            background: var(--success-gradient);
            padding: 2rem;
            position: relative;
            overflow: hidden;
        }
        
        .form-header-glow::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
            animation: rotateGlow 12s linear infinite;
        }
        
        @keyframes rotateGlow {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .form-control-custom {
            border: 2px solid #f0f0f0;
            border-radius: 12px;
            padding: 15px 20px;
            font-size: 1rem;
            transition: all 0.3s;
            background-color: #fafafa;
        }
        
        .form-control-custom:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 0.25rem rgba(231, 76, 60, 0.15);
            background-color: white;
        }
        
        .file-upload-wrapper {
            position: relative;
            margin-top: 1rem;
        }
        
        .file-upload-label {
            display: block;
            padding: 2rem;
            border: 2px dashed #e0e0e0;
            border-radius: 12px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .file-upload-label:hover {
            border-color: var(--accent-color);
            background-color: #f9f9f9;
        }
        
        .file-upload-label i {
            font-size: 2.5rem;
            color: #7f8c8d;
            margin-bottom: 1rem;
            display: block;
        }
        
        .btn-client-magic {
            background: var(--success-gradient);
            border: none;
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            border-radius: 50px;
            color: white;
            position: relative;
            overflow: hidden;
            transition: all 0.4s;
            box-shadow: 0 10px 25px rgba(52, 152, 219, 0.3);
        }
        
        .btn-client-magic:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(52, 152, 219, 0.4);
        }
        
        .btn-client-magic::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
            opacity: 0;
            transition: opacity 0.4s;
            z-index: -1;
        }
        
        .btn-client-magic:hover::after {
            opacity: 1;
        }
        
        .photo-preview {
            max-width: 150px;
            border-radius: 10px;
            border: 2px solid #eee;
            margin-top: 1rem;
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="client-form-card">
                <!-- Header avec effet glow -->
                <div class="form-header-glow text-white text-center">
                    <h2 class="mb-3"><i class="bi bi-person-plus-fill"></i> NOUVEAU CLIENT</h2>
                    <p class="mb-0 opacity-75">Remplissez les informations du client</p>
                </div>
                
                <div class="card-body p-5">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                    
                    <div class="row g-4">
                        <!-- Nom et Prénom -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.nom, {'attr': {
                                    'class': 'form-control form-control-custom',
                                    'placeholder': 'Nom'
                                }}) }}
                                {{ form_label(form.nom) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.prenom, {'attr': {
                                    'class': 'form-control form-control-custom',
                                    'placeholder': 'Prénom'
                                }}) }}
                                {{ form_label(form.prenom) }}
                            </div>
                        </div>
                        
                        <!-- Email et Téléphone -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.email, {'attr': {
                                    'class': 'form-control form-control-custom',
                                    'placeholder': 'Email'
                                }}) }}
                                {{ form_label(form.email) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.telephone, {'attr': {
                                    'class': 'form-control form-control-custom',
                                    'placeholder': 'Téléphone'
                                }}) }}
                                {{ form_label(form.telephone) }}
                            </div>
                        </div>
                        
                        <!-- CNI et Adresse -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.cni, {'attr': {
                                    'class': 'form-control form-control-custom',
                                    'placeholder': 'Numéro CNI'
                                }}) }}
                                {{ form_label(form.cni) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.adresse, {'attr': {
                                    'class': 'form-control form-control-custom',
                                    'placeholder': 'Adresse'
                                }}) }}
                                {{ form_label(form.adresse) }}
                            </div>
                        </div>
                        
                        <!-- Photo -->
                        <div class="col-12">
                            <div class="file-upload-wrapper">
                                {{ form_label(form.photo, 'Photo du client', {'label_attr': {'class': 'form-label'}}) }}
                                <label for="{{ form.photo.vars.id }}" class="file-upload-label">
                                    <i class="bi bi-camera-fill"></i>
                                    <span>Cliquez pour télécharger une photo</span>
                                </label>
                                {{ form_widget(form.photo, {'attr': {
                                    'class': 'd-none'
                                }}) }}
                                <img id="photoPreview" class="photo-preview" alt="Aperçu photo client">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Boutons d'action -->
                    <div class="d-flex justify-content-between mt-5">
                        <a href="{{ path('app_client_list') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i> RETOUR
                        </a>
                        <button type="submit" class="btn btn-client-magic">
                            <i class="bi bi-save-fill me-2"></i> ENREGISTRER
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Preview de la photo
        document.getElementById('{{ form.photo.vars.id }}').addEventListener('change', function(e) {
            const preview = document.getElementById('photoPreview');
            if (this.files && this.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
        
        // Animation au chargement
        document.querySelectorAll('.form-floating').forEach((el, index) => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = `all 0.5s ease ${index * 0.1}s`;
            
            setTimeout(() => {
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
{% endblock %}