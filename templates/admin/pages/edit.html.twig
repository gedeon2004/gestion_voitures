{% extends 'admin/base.html.twig' %}

{% block title %}Modifier {{ voiture.marque|upper }} {{ voiture.modele }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-dark: #2c3e50;
            --primary-light: #3498db;
            --accent: #e74c3c;
            --gradient: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-light) 100%);
        }
        
        .edit-card {
            border: none;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 12px 40px rgba(0,0,0,0.15);
            transform: translateY(0);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
        }
        .edit-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.2);
        }
        
        .card-header-glow {
            background: var(--gradient);
            position: relative;
            overflow: hidden;
        }
        .card-header-glow::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.6s;
        }
        .card-header-glow:hover::after {
            opacity: 1;
        }
        
        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 1.5rem;
        }
        .section-title::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 50px;
            height: 3px;
            background: var(--accent);
            border-radius: 3px;
        }
        
        .price-bubble {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 700;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .current-price {
            background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
            color: white;
        }
        .old-price {
            background: #f8f9fa;
            color: #6c757d;
            text-decoration: line-through;
        }
        
        .img-preview-container {
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            transition: all 0.4s;
            border: 1px solid #e0e0e0;
        }
        .img-preview-container:hover {
            transform: scale(1.02);
            box-shadow: 0 12px 25px rgba(0,0,0,0.15);
        }
        
        .btn-neon {
            position: relative;
            overflow: hidden;
            border: none;
            font-weight: 600;
            letter-spacing: 0.5px;
            padding: 12px 28px;
            border-radius: 10px;
            transition: all 0.4s;
        }
        .btn-save {
            background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
        }
        .btn-cancel {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        }
        .btn-neon:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        .btn-neon::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                to bottom right,
                rgba(255,255,255,0) 45%,
                rgba(255,255,255,0.8) 50%,
                rgba(255,255,255,0) 55%
            );
            transform: rotate(30deg);
            opacity: 0;
            transition: all 0.6s;
        }
        .btn-neon:hover::after {
            opacity: 1;
            left: 100%;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-section {
            animation: fadeIn 0.6s forwards;
        }
        .delay-1 { animation-delay: 0.1s; }
        .delay-2 { animation-delay: 0.2s; }
        .delay-3 { animation-delay: 0.3s; }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-8">
            <div class="edit-card">
                <!-- Header avec effet glow -->
                <div class="card-header card-header-glow text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="bi bi-pencil-fill me-2"></i>
                            MODIFIER {{ voiture.marque|upper }} {{ voiture.modele|upper }}
                        </h2>
                        <div class="d-flex gap-3">
                            <span class="price-bubble current-price">
                                ${{ voiture.prixActuel|number_format(2, '.', ',') }}
                            </span>
                            {% if voiture.ancienPrix %}
                                <span class="price-bubble old-price">
                                    ${{ voiture.ancienPrix|number_format(2, '.', ',') }}
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="card-body p-5">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <!-- Section Informations -->
                    <div class="mb-5 animate-section">
                        <h3 class="section-title">INFORMATIONS GÉNÉRALES</h3>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.marque, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Marque'
                                        }
                                    }) }}
                                    {{ form_label(form.marque) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.modele, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Modèle'
                                        }
                                    }) }}
                                    {{ form_label(form.modele) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.annee, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Année'
                                        }
                                    }) }}
                                    {{ form_label(form.annee) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.note, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Note',
                                            'min': 1,
                                            'max': 5
                                        }
                                    }) }}
                                    {{ form_label(form.note) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Section Prix -->
                    <div class="mb-5 animate-section delay-1">
                        <h3 class="section-title">TARIFICATION</h3>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.prixActuel, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Prix Actuel'
                                        }
                                    }) }}
                                    {{ form_label(form.prixActuel) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.ancienPrix, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Ancien Prix'
                                        }
                                    }) }}
                                    {{ form_label(form.ancienPrix) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Section Image -->
                    <div class="mb-5 animate-section delay-2">
                        <h3 class="section-title">VISUEL</h3>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.image) }}
                                    {{ form_widget(form.image) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                {% if voiture.image %}
                                    <div class="img-preview-container p-3">
                                        <p class="text-muted mb-2">Image actuelle :</p>
                                        <img src="{{ asset('uploads/voitures/' ~ voiture.image) }}" 
                                            class="img-fluid rounded"
                                            alt="Image de {{ voiture.marque }} {{ voiture.modele }}"
                                            style="max-height: 200px;">
                                    </div>
                                {% else %}
                                    <div class="alert alert-info">
                                        Aucune image disponible
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    <!-- Boutons d'action -->
                    <div class="d-flex justify-content-end gap-3 mt-4 animate-section delay-3">
                        <a href="{{ path('app_admin_list') }}" class="btn btn-neon btn-cancel text-white">
                            <i class="bi bi-arrow-left me-2"></i> RETOUR
                        </a>
                        <button type="submit" class="btn btn-neon btn-save text-white">
                            <i class="bi bi-check-circle me-2"></i> SAUVEGARDER
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Preview image upload
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.createElement('img');
                    preview.src = e.target.result;
                    preview.className = 'img-fluid rounded mt-3';
                    preview.style.maxHeight = '200px';
                    
                    const container = document.getElementById('currentImage')?.parentElement;
                    if (container) {
                        container.innerHTML = '';
                        container.appendChild(preview);
                    }
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        
        // Animation des étoiles pour la note
        const noteInput = document.querySelector('#{{ form.note.vars.id }}');
        if (noteInput) {
            noteInput.addEventListener('input', function() {
                const value = parseInt(this.value);
                if (value > 5) this.value = 5;
                if (value < 1) this.value = 1;
            });
        }
    </script>
{% endblock %}